local knit = require("knit")

local src = knit.glob("*.c")
local obj = knit.extrepl(src, ".c", ".o")

return b{
    $ all:V: libfoo.a libbar/libbar.a

    $ libbar/libbar.a:Kc[libbar/build.knit]:
        knit libbar.a

    $ %.o: %.c
        cc -c $input -o $output

    $ libfoo.a: $obj
        ar -rcs $output $input

    $ clean:VB:
        rm -f *.o
        rm -f *.a
}
